{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@tests/*": ["./*"]
    }
  },
  "include": [
    "**/*",
    "*.ts",
    "fixtures/**/*",
    "unit/**/*",
    "integration/**/*",
    "workflow/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
} 